@model Entities.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_Login.cshtml";
}
<form asp-action="Login" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nickname"></label>
        <div class="row">
            <div class="col-8">
                <input asp-for="Nickname" type="text" class="form-control" placeholder="Kullanıcı ismi">
            </div>
            <div class="col">
                @ViewBag.Domain
            </div>
        </div>
        <span class="error" style="color:red; font-size:12px;" asp-validation-for="Nickname"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
        <span style="color:red; font-size:12px;" class="error" asp-validation-for="Password"></span>
    </div>
    <div class="row">
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </div><!-- /.col -->
    </div>
</form>

<p class="mb-1">
    <a asp-action="ForgetPassword">Şifremi unuttum</a>
</p>

@section StyleSheet{
    <!-- Toastr -->
    <link rel="stylesheet" href="~/theme/plugins/toastr/toastr.min.css">
}

@section Scripts{
    <!-- Toastr -->
    <script src="~/theme/plugins/toastr/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            var nickname = $.trim($("#Nickname").val())
            if (nickname.length > 0) {
                toastr.error("Kullanıcı adı ve/veya şifre hatalı! Lütfen girdiğiniz bilgileri kontrol ediniz!");
            }
        });
    </script>
}