@model IEnumerable<Entities.Concrete.Duty>
@{
    ViewData["Title"] = "Görevler";
}

<div class="row">
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Tanımlanan Görevler</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="mailbox-controls">
                    <button type="button" id="sync" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button>
                </div>
                <div class="table-responsive mailbox-messages direct-chat-messages">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <td class="mailbox-subject">Başlık</td>
                                <td class="mailbox-subject">Tanımlayan</td>
                                <td class="mailbox-name">Önem Derecesi</td>
                                <td class="mailbox-name">Zaman Aralığı</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Entities.Concrete.Duty task in Model)
                            {
                                <tr>
                                    <td class="mailbox-subject">
                                        <a asp-controller="Duty" asp-action="Details" asp-route-id="@task.Id"><b>@task.TaskName</b></a>
                                    </td>
                                    <td class="mailbox-name">@task.From.Name + @task.From.LastName</td>
                                    <td class="mailbox-name">@task.TaskType</td>
                                    <td class="mailbox-read-time">@task.StartDate.ToString("dd/MM/yyyy") - @task.EndDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td class="mailbox-subject">Başlık</td>
                                <td class="mailbox-subject">Tanımlayan</td>
                                <td class="mailbox-name">Önem Derecesi</td>
                                <td class="mailbox-name">Zaman Aralığı</td>
                            </tr>
                        </tfoot>
                    </table>
                    <!-- /.table -->
                </div>
                <!-- /.mail-box-messages -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer p-0">
                <div class="mailbox-controls">
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button>
                </div>
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section Scripts{
    <!-- Page Script -->
    <script>

        $(function () {
            $('#sync').click(function () {
                location.reload()
            })
        })</script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>
}

