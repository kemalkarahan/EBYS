@model Entities.ViewModels.InstitutionUpdateViewModel

@{
    ViewData["Title"] = "Kurum Bilgileri";
}

<div class="row">
    <div class="col-md">
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle"
                         src="~/files/system/images/@ViewBag.Logo"
                         alt="User profile picture">
                </div>
                <h3 class="profile-username text-center">@Html.DisplayFor(model => model.Name)</h3>

                <ul class="list-group list-group-unbordered mb-3">
                    <li class="list-group-item">
                        <b>@Html.DisplayNameFor(model => model.Domain)</b> <a class="float-right">@Html.DisplayFor(model => model.Domain)</a>
                    </li>
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#accountsettings" data-toggle="tab">Kurum Bilgileri</a></li>
                </ul>
            </div><!-- /.card-header -->
            <div style="display:block;" class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="accountsettings">
                        <form asp-controller="Admin" asp-action="Institution" method="post" class="form-horizontal" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label asp-for="Logo" class="col-sm-2 col-form-label"></label>
                                <div class="form-group col-sm-10  custom-file">
                                    <input asp-for="Logo" type="file" accept='image/jpeg, image/png' class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Resim seç</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Name" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Domain" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Domain" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-3">
                                    <input type="text" asp-for="Email" class="form-control" />
                                </div>
                                <div class="col-sm">
                                    <label>@Model.Domain</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="password" asp-for="Password" value="@Model.Password" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="SmtpHost" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-1">
                                    <label>smtp.</label>
                                </div>
                                <div class="col-sm">
                                    <input type="text" asp-for="SmtpHost" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="SmtpPort" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-1">
                                    <input type="radio" asp-for="SmtpPort" value="25" class="form-control" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="SmtpPort">25</label><br>
                                </div>
                                <div class="col-sm-1">
                                    <input type="radio" asp-for="SmtpPort" value="587" class="form-control" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="SmtpPort">587</label><br>
                                </div>
                                <div class="col-sm-1">
                                    <input type="radio" asp-for="SmtpPort" value="465" class="form-control" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="SmtpPort">465</label><br>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-sm-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div><!-- /.card-body -->
        </div>
        <!-- /.nav-tabs-custom -->
    </div>
</div>


<!-- /.card -->
<!-- /.col -->

@section Scripts{
    <script src="~/theme/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
}