@model Entities.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Pano";
}
<div class="container-fluid">

    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <div class="col-md-8">
            <!-- TABLE: LATEST TASKS -->
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">En Son Eklenen Görevler</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table m-0">
                            <thead>
                                <tr>
                                    <th>Görev Başlığı</th>
                                    <th>Görev Tanımı</th>
                                    <th>Önem Derecesi</th>
                                    <th>Zaman Aralığı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.IndexTaskInfos.Count >= 1)
                                {
                                    foreach (var task in Model.IndexTaskInfos)
                                    {
                                        <tr>
                                            <th>@task.TaskName</th>
                                            <th>@task.TaskType</th>
                                            <th>@task.Category</th>
                                            <th>@task.Datetime</th>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <a asp-controller="Task" asp-action="Charged" class="btn btn-sm btn-primary text-white float-right">Tanımlanmış tüm görevleri göster</a>
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->

        <div class="col-md-4">

            <!-- DOCUMENT LIST -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">En son eklenen dosyalar</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    @if (Model.Documents.Count >= 1)
                    {
                        <ul class="products-list product-list-in-card pl-2 pr-2">
                            @foreach (var document in Model.Documents)
                            {
                                <li class="item">
                                    <div class="product-img">
                                        <a class="product-title">
                                            <i class="fa fa-fw fa-file-archive"></i>
                                            @document.Title
                                        </a>
                                        <a target="_blank" asp-controller="Document" asp-action="Download" asp-route-id="@document.Id">
                                            <span class="product-description">
                                                İndir
                                            </span>
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
                <!-- /.card-body -->
                <div class="card-footer text-center">
                    <a asp-controller="Document" asp-action="Index" class="uppercase">Tüm dosyaları göster</a>
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>